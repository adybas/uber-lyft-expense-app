<%= form_for([@expense_report, @expense]) do |f| %>
<%= f.hidden_field :expense_report_id, value: params[:expense_report_id] %>

  <%= f.label :month, "Month:" %>
  <%= f.text_field :month %>

  <%= f.label :cost, "Cost:" %>
  <%= f.number_field :cost %>

  <%= f.fields_for :comments do |comment_builder| %>

    <%= comment_builder.collection_select(:category_id, @categories, :id, :name, {prompt: "Select Category"}) %>

    <%= comment_builder.label :description %>
    <%= comment_builder.text_area :description %>

  <% end %>

  <%= f.submit %>

<% end %>
